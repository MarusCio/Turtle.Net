@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link turtle-nav-link" asp-area="" asp-controller="Users" asp-action="Show" asp-route-id="@UserManager.GetUserId(User)" title="Manage">Account</a> 
        @* <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a> *@
    </li>
    <li class="nav-item d-flex align-items-center">
        <form  class="m-0 p-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link turtle-nav-link btn btn-link p-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link turtle-nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link turtle-nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
