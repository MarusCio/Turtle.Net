@model Turtle.Models.Community


<h2 class="text-center mt-5">Add Community</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="New" enctype="multipart/form-data" asp-controller="Communities">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CommunityName" class="form-label">Nume comunitate</label>
                    <br />
                    <input asp-for="CommunityName" class="form-control" />

                    <!-- Mesaj de validare pentru numele comunitatii -->
                    <span asp-validation-for="CommunityName" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="NSFW" class="form-label">NSFW</label>
                    <br />
                    <textarea asp-for="NSFW" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru NSFW -->
                    <span asp-validation-for="NSFW" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label>Community image</label>
                    <input type="file" name="Img" class="form-control"/>

                    <!-- Mesaj de validare pentru imagine -->
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    <br /><br />
                </div>


                
                <br />
                <button class="btn btn-success" type="submit">Add Community</button>

            </form>
        </div>
    </div>
</div>


