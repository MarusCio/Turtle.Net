@model Turtle.Models.Community

<h2 class="text-center mt-5">Edit Community</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Communities" asp-route-id="@Model.Id" enctype="multipart/form-data">

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CommunityName" class="form-label">Nume comunitate</label>
                    <br />
                    <input asp-for="CommunityName" class="form-control" />

                    <!-- Mesaj de validare pentru numele comunitatii -->
                    <span asp-validation-for="CommunityName" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <br />
                    <textarea asp-for="Description" class="form-control"></textarea>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="NSFW" class="form-label">NSFW</label>
                    <br />
                    <textarea asp-for="NSFW" class="form-control"></textarea>

                    <!-- Mesaj de validare pentru NSFW -->
                    <span asp-validation-for="NSFW" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="ImageUrl" class="form-label">Community Image</label>
                    <br />
                    <input type="file" name="Img" class="form-control" />
                    <small class="text-muted">
                        Leave empty to keep the current image
                    </small>

                    <br /><br />
                </div>


                <br />
                <button class="btn btn-success" type="submit">Edit community</button>

            </form>
        </div>
    </div>
</div>


